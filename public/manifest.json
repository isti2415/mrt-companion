{
  "name": "Dhaka MRT Companion",
  "short_name": "MRT Companion",
  "description": "A digital companion for Dhaka MRT commuters",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "orientation": "portrait",
  "permissions": ["nfc"],
  "nfc": {
    "system_code": "0003",
    "protocol": "type-f"
  },
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Scan Card",
      "short_name": "Scan",
      "description": "Scan your MRT card",
      "url": "/?action=scan",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "prefer_related_applications": false
}
